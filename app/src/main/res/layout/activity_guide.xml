<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testNivel.GuideActivity"
    android:background="@color/blue_500">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="409dp"
        android:layout_height="315dp"
        android:src="@drawable/logo_novo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TakeTest"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="Aqui você encontra orientações iniciais
para realizar seu teste. \nFaça o teste para iniciar no jogo!"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/orange_200"
        android:text="Estou pronto"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TakeTest" />


</androidx.constraintlayout.widget.ConstraintLayout>

