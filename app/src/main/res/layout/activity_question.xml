<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <View
        android:id="@+id/nivel"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@color/blue_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nível"
        android:textSize="32dp"
        android:textAllCaps="true"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/NivelA"
        app:layout_constraintBottom_toBottomOf="@id/NivelA"/>

    <ImageView
        android:id="@+id/NivelA"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_nivela"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/nivel"
        app:layout_constraintStart_toEndOf="@id/first"
        app:layout_constraintBottom_toBottomOf="@id/nivel"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@color/blue_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nivel"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/nivel"/>

    <TextView
        android:id="@+id/pontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação: 100"
        android:textSize="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"/>

    <LinearLayout
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/questions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nivel">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qimage"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16dp"
            android:layout_margin="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo
Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo
Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo Exemplo "
            android:layout_margin="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alter"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="310dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question">

        <Button
            android:id="@+id/alternativaA"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:backgroundTint="@color/alternativas"
            android:text="Alternativa A"
            android:hint="A"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/alternativaB"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_marginTop="92dp"
            android:backgroundTint="@color/alternativas"
            android:text="Alternativa B"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/alternativaC"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Alternativa C"
            android:textColor="@color/black"
            android:backgroundTint="@color/alternativas"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alternativaB"/>

        <Button
            android:id="@+id/alternativaD"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Alternativa D"
            android:textColor="@color/black"
            android:backgroundTint="@color/alternativas"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alternativaC"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="256dp"
        android:layout_height="23dp"
        android:layout_marginBottom="40dp"
        android:background="#FFFFFF"
        android:backgroundTint="@color/barra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.444"
        app:srcCompat="@drawable/ic_count" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30'"
        android:textSize="16dp"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="669dp"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toStartOf="@id/progressBar"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="189dp"
        android:layout_height="20dp"
        android:layout_marginBottom="88dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>